{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./src/api/*"],

      "@common/*": ["./src/components/common/*"],
      "@common": ["./src/components/common"],
      "@components/*": ["./src/components/*"],

      "@features/*": ["./src/components/features/*"],
      "@FeaturesCommon/*": ["./src/components/features/Common/*"],
      "@FeaturesCommon": ["./src/components/features/Common"],
      "@features_environmental/*": ["./src/components/features/environmental/*"],
      "@features_environmental": ["./src/components/features/environmental"],
      "@features_ProjectControls/*": ["./src/components/features/ProjectControls/*"],
      "@features_ProjectControls": ["./src/components/features/ProjectControls"],
      "@environmental_sensor_common/*": ["./src/components/features/environmental/sensor_common/*"],
      "@environmental_sensor_common": ["./src/components/features/environmental/sensor_common"],
      "@environmental_dust/*": ["./src/components/features/environmental/dust/*"],
      "@environmental_dust": ["./src/components/features/environmental/dust"],

      "@dashboards/*": ["./src/components/Dashboards/*"],
      "@dashboardGroups/*": ["./src/components/DashboardGroups/*"],
      "@dashboardGroups": ["./src/components/DashboardGroups"],

      "@auth/*": ["./src/auth/*"],
      "@auth": ["./src/auth"],
      "@pages/*": ["./src/pages/*"],
      "@pages": ["./src/pages"],
      "@lib/*": ["./src/lib/*"],
      "@lib": ["./src/lib"],
      "@constants/*": ["./src/constants/*"],
      "@constants": ["./src/constants"],
      "@config/*": ["./src/config/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@types/*": ["./src/types/*"],
      "@tests/*": ["./src/tests/*"],
      "@data/*": ["./src/data/*"],
      "@data": ["./src/data"],
      "@routes/*": ["./src/routes/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}