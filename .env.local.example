# Example Environment Configuration
# Copy this file to .env for base settings and create .env.[environment] files for specific environments

# Base application configuration (minimal)
PORT=5174
VITE_API_BASE_URL=http://localhost:3001

# Default database selection (can be overridden in environment-specific files)
VITE_DATABASE_SELECTION=DEV

# For complete configuration, see environment-specific examples:
# .env.development - Development environment settings
# .env.production - Production environment settings
# .env.test - Test environment settings
# .env.local.example - Template for local overrides

# API Configuration
VITE_USE_MOCK_DATA=true  # Controls whether to use mock data for API endpoints
VITE_DEBUG_ACCESS_RIGHTS=false
VITE_BYPASS_AUTHENTICATION=false

# API Base URL
VITE_API_URL=http://localhost:3002

# Optional: Feature Flags
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# Clerk Authentication
VITE_CLERK_PUBLISHABLE_KEY=pk_test_XXXXX
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_API_URL=https://api.clerk.com
CLERK_JWKS_URL=https://your-project.clerk.accounts.dev/.well-known/jwks.json

# DEV DATABASE - ADD YOUR ACTUAL CREDENTIALS HERE
VITE_DEV_SUPABASE_URL=https://your-dev-project.supabase.co
VITE_DEV_SUPABASE_ANON_KEY=your-dev-anon-key

# Connection to Supabase via Shared Connection Pooler (for regular app usage)
DEV_DATABASE_URL=postgresql://postgres.projectref:password@aws-0-region.pooler.supabase.com:6543/postgres?pgbouncer=true

# Direct connection to the database (for migrations and admin tasks)
DEV_DIRECT_URL=postgresql://postgres.projectref:password@aws-0-region.pooler.supabase.com:5432/postgres

# PROD DATABASE - ADD YOUR ACTUAL CREDENTIALS HERE IF NEEDED
## Supabase 
VITE_PROD_SUPABASE_URL=https://your-prod-project.supabase.co
VITE_PROD_SUPABASE_ANON_KEY=your-prod-anon-key
VITE_PROD_SUPABASE_SERVICE_KEY=your-prod-service-key
VITE_PROD_DATABASE_URL=postgresql://username:password@host:port/database?pgbouncer=true
VITE_PROD_DIRECT_URL=postgresql://username:password@host:port/database

## Non-prefixed versions for Prisma
PROD_DATABASE_URL=postgresql://username:password@host:port/database?pgbouncer=true
PROD_DIRECT_URL=postgresql://username:password@host:port/database