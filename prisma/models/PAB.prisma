model ExpenditureIndicators {
  id                 String                  @id @default(uuid())
  
  // Relations
  indicators         ExpenditureIndicator[]
  monthlyPABRecord   MonthlyPABRecord? @relation(fields: [recordId], references: [id])
  recordId           String?
